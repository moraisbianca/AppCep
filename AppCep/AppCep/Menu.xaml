<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppCep.Menu">
    
    <ContentPage.Content>

        <Grid ColumnDefinitions="*,*"
              RowDefinitions="*,*,*,*,*">

            <Label Grid.Row="0" Grid.Column="0"
                   Grid.ColumnSpan="2"
                   Text="Api Busca CEP" />


            <Button Grid.Row="1" Grid.Column="0"
                    Text="BUSCAR CEP POR ENDEREÇO" Clicked="CepByLogradouro"/>

            <Button Grid.Row="1" Grid.Column="1"
                    Text="BUSCAR ENDEREÇO POR CEP" Clicked="LogradouroByCep"/>

            <Button Grid.Row="2" Grid.Column="0"
                    Text="BUSCAR BAIRRO POR CIDADE" Clicked="BairroPorCidade"/>

            <Button Grid.Row="2" Grid.Column="1" 
                    Text="BUSCAR CIDADE POR ESTADO" Clicked="CidadeByEstado"/>

            <Button Grid.Row="3" Grid.Column="0"
                    Text="BUSCAR RUAS POR BAIRRO" Clicked="LogradouroByBairro" />



        </Grid>
        
        
    </ContentPage.Content>
    
</ContentPage>